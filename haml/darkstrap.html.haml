        .row
          .span8.offset2
            %form.form-horizontal
              %fieldset
                %legend Here's a legend
                .control-group
                  %label.control-label(for="input01") Text input
                  .controls
                    %input.input-xlarge#input01(type="text")
                    %p.help-block Here's a help block
                .control-group
                  %label.control-label(for="optionsCheckbox") Checkbox
                  .controls
                    %label.checkbox
                      %input#optionsCheckbox(type="checkbox" value="options1")
                        Option one is this and that.

                .control-group
                  %label.control-label(for="select01") Select list
                  .controls
                    %select#select01
                      %option something
                      %option 2
                      %option 3
                      %option 4
                      %option 5

                .control-group
                  %label.control-label(for="multiSelect") Multi select
                  .controls
                    %select#multiSelect(multiple="multiple")
                      %option something
                      %option 2
                      %option 3
                      %option 4
                      %option 5

                .control-group
                  %label.control-label(for="fileInput") File input
                  .controls
                    %input.input-file#fileInput(type="file")

                .control-group
                  %label.control-label(for="textarea") Textarea
                  .controls
                    %textarea#textarea.input-xlarge(rows="3")

                .control-group
                  %label.control-label(for="prependedInput") Prepended text
                  .controls
                    .input-prepend
                      %span.add-on @
                      %input.span2#prependedInput(size="16" type="text")
                    %p.help-block Some help text
                .control-group
                  %label.control-label(for="appendedInput") Appended text
                  .controls
                    .input-append
                      %input.span2#appendedInput(size="16" type="text")
                      %span.add-on .00
                    %p.help-block Some help text

                .form-actions
                  %button.btn.btn-primary(type="submit") Save changes
                  %button.btn(type="reset") Cancel


        .row
          .span8.offset2
            %form.form-horizontal
              %fieldset
